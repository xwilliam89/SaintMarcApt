<%- include('partials/header'); -%>

<%- include('partials/navbar-generic'); -%>

<main class="form-signin container">
    <div class="p-5 bg-light rounded">
        <form action="/sign-in" method="POST">

            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                <input type="email" class="form-control first-input" name="email" placeholder="name@example.com" required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control last-input" name="password" placeholder="Password" required>
                <label for="floatingPassword">Password</label>
            </div>
            <div class="mb-3">
                Not a user yet? 
                <a href="/user/register" class="btn btn-sm btn-outline-success">Register Now</a>
            </div>

            <button class="w-100 btn btn-lg btn-dark" type="submit">Sign in</button>
        </form>
    </div>
</main>

<%- include('partials/footer'); -%>