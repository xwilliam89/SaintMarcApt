<%- include('partials/header'); -%>

<%- include('partials/navbar-generic'); -%>

<main class="form-signin container">
    <div class="p-5 bg-light rounded">
        <form action="/user/register" method="POST">

            <h1 class="h3 mb-3 fw-normal">Register new user</h1>

            <div class="form-floating">
                <input type="email" class="form-control" name="username" placeholder="name@example.com" required>
                <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
                <label for="floatingPassword">Password</label>
            </div>

            <button class="w-100 btn btn-lg btn-dark" type="submit">Register</button>
        </form>
    </div>
</main>

<%- include('partials/footer'); -%>